{
  "name": "ai-dual-brand-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:integration": "jest --config jest.integration.config.js",
    "test:smoke": "playwright test --grep @smoke",
    "test:performance": "lighthouse --output=json --output-path=./performance-report/lighthouse.json",
    "lighthouse": "lighthouse --output=json --output-path=./lighthouse-report/lighthouse.json",
    "db:check": "node scripts/check-schema.js",
    "deploy:dev": "vercel --prod --yes",
    "deploy:prod": "vercel --prod --yes",
    "rollback": "vercel rollback",
    "law:check": "npx tsx ./cursor/agent.ts",
    "law:check:soft": "npx tsx ./cursor/agent.ts --soft",
    "law:check:json": "npx tsx ./cursor/agent.ts --json",
    "law:test": "npx tsx ./cursor/agent.ts --only=DB-01 && npx tsx ./cursor/agent.ts --only=CRON-01 && npx tsx ./cursor/agent.ts --only=PLANS-01 && npx tsx ./cursor/agent.ts --only=DELETE-01 && npx tsx ./cursor/agent.ts --only=ASSET-01 && npx tsx ./cursor/agent.ts --only=ARCH-01",
    "clean": "rm -rf .next out coverage .nyc_output",
    "deps:check": "npx depcheck",
    "deps:update": "npx npm-check-updates -u",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "@stripe/stripe-js": "^2.2.0",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/supabase-js": "^2.55.0",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.294.0",
    "next": "^14.2.31",
    "react": "^18",
    "react-dom": "^18",
    "stripe": "^14.7.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "depcheck": "^1.4.7",
    "npm-check-updates": "^16.14.19",
    "lighthouse": "^11.6.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
